{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": "container",
  "data": {
    "url": "./data/top_airlines_yearly.csv"
  },
  "transform": [
    {
      "sort": [
        {
          "field": "on_time",
          "order": "descending"
        }
      ],
      "window": [
        {
          "op": "rank",
          "as": "rank"
        }
      ],
      "groupby": ["year"]
    }
  ],
  "params": [
    {
      "name": "carrier",
      "select": {
        "type": "point",
        "fields": ["carrier_name"]
      },
      "bind": "legend"
    }
  ],
  "mark": {
    "type": "line",
    "orient": "vertical",
    "point": {
      "size": 128
    },
    "size": 4
  },
  "encoding": {
    "x": {
      "field": "year",
      "timeUnit": "year",
      "title": "Year"
    },
    "y": {
      "field": "rank",
      "type": "ordinal",
      "title": "Rank"
    },
    "color": {
      "field": "carrier_name",
      "type": "nominal",
      "scale": {
        "range": [
          "#a6cee3",
          "#1f78b4",
          "#b2df8a",
          "#33a02c",
          "#fb9a99",
          "#e31a1c",
          "#fdbf6f",
          "#ff7f00"
        ]
      },
      "legend": {
        "title": "Airline"
      }
    },
    "opacity": {
      "condition": {
        "param": "carrier",
        "value": 1
      },
      "value": 0.2
    },
    "tooltip": [
      {
        "field": "carrier_name",
        "type": "nominal",
        "title": "Airline"
      },
      { "field": "rank", "type": "ordinal", "title": "Rank" }
    ]
  },
  "config": {
    "font": "-apple-system, BlinkMacSystemFont, Inter, 'Segoe UI', Helvetica, Arial, sans-serif"
  }
}

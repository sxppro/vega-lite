{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "",
  "autosize": {
    "contains": "padding",
    "resize": true,
    "type": "fit"
  },
  "vconcat": [
    {
      "hconcat": [
        {
          "width": 425,
          "height": 320,
          "data": {
            "url": "./data/delay_cause_monthly.csv"
          },
          "transform": [
            {
              "as": "date",
              "calculate": "datetime(datum.year, datum.month - 1)"
            }
          ],
          "encoding": {
            "x": {
              "field": "date",
              "timeUnit": "yearmonth",
              "scale": {
                "domain": {
                  "param": "time_brush"
                }
              },
              "axis": {
                "title": "",
                "tickCount": 10,
                "grid": false
              }
            }
          },
          "layer": [
            {
              "layer": [
                {
                  "mark": "line",
                  "params": [
                    {
                      "name": "delay_cause",
                      "select": {
                        "type": "point",
                        "fields": ["type"]
                      },
                      "bind": "legend"
                    }
                  ]
                },
                {
                  "transform": [
                    {
                      "filter": {
                        "param": "hover",
                        "empty": false
                      }
                    }
                  ],
                  "mark": "point"
                }
              ],
              "encoding": {
                "y": {
                  "field": "value",
                  "type": "quantitative",
                  "axis": {
                    "title": "% of flights"
                  }
                },
                "tooltip": [
                  {
                    "field": "date",
                    "timeUnit": "year",
                    "format": "%Y",
                    "title": "Year"
                  }
                ],
                "color": {
                  "field": "type",
                  "type": "nominal",
                  "scale": {
                    "range": "category"
                  },
                  "legend": {
                    "title": "Delay Cause",
                    "labelExpr": "datum.label === 'delay_carrier' ? 'Carrier' : datum.label === 'delay_late' ? 'Previous late aircraft' : datum.label === 'delay_nas' ? 'National Aviation System' : datum.label === 'delay_security' ? 'Security' : 'Weather'"
                  }
                },
                "opacity": {
                  "condition": {
                    "param": "delay_cause",
                    "value": 1
                  },
                  "value": 0.2
                }
              }
            },
            {
              "transform": [
                {
                  "pivot": "type",
                  "value": "value",
                  "groupby": ["date"]
                }
              ],
              "mark": "rule",
              "encoding": {
                "opacity": {
                  "condition": {
                    "value": 0.3,
                    "param": "hover",
                    "empty": false
                  },
                  "value": 0
                },
                "tooltip": [
                  {
                    "field": "date",
                    "timeUnit": "month",
                    "title": "Month"
                  },
                  {
                    "field": "date",
                    "timeUnit": "year",
                    "title": "Year"
                  },
                  {
                    "field": "delay_carrier",
                    "type": "quantitative",
                    "title": "Carrier (%)",
                    "format": ".2"
                  },
                  {
                    "field": "delay_late",
                    "type": "quantitative",
                    "title": "Previous late aircraft (%)",
                    "format": ".2"
                  },
                  {
                    "field": "delay_security",
                    "type": "quantitative",
                    "title": "Security (%)",
                    "format": ".2"
                  },
                  {
                    "field": "delay_nas",
                    "type": "quantitative",
                    "title": "National Aviation System (%)",
                    "format": ".2"
                  },
                  {
                    "field": "delay_weather",
                    "type": "quantitative",
                    "title": "Extreme weather (%)",
                    "format": ".2"
                  }
                ]
              },
              "params": [
                {
                  "name": "hover",
                  "select": {
                    "type": "point",
                    "fields": ["date"],
                    "nearest": true,
                    "on": "mouseover",
                    "clear": "mouseout"
                  }
                }
              ]
            },
            {
              "encoding": {
                "x": { "datum": { "year": 2020, "month": 2 } }
              },
              "layer": [
                {
                  "mark": "rule"
                },
                {
                  "mark": {
                    "type": "text",
                    "align": "right",
                    "baseline": "bottom",
                    "dx": -2,
                    "dy": -134,
                    "x": "width",
                    "text": "Pandemic"
                  }
                }
              ]
            }
          ]
        },
        {
          "width": 425,
          "height": 320,
          "data": {
            "url": "./data/delay_cause_monthly_mins.csv"
          },
          "transform": [
            {
              "as": "date",
              "calculate": "datetime(datum.year, datum.month - 1)"
            }
          ],
          "mark": "line",
          "encoding": {
            "x": {
              "field": "date",
              "timeUnit": "yearmonth",
              "scale": {
                "domain": {
                  "param": "time_brush"
                }
              },
              "axis": {
                "title": "",
                "tickCount": 10,
                "grid": false
              }
            },
            "y": {
              "field": "value",
              "type": "quantitative",
              "axis": {
                "title": "Minutes"
              }
            },
            "color": {
              "field": "type",
              "type": "nominal",
              "scale": {
                "range": "category"
              },
              "legend": {
                "title": "Delay Cause",
                "labelExpr": "datum.label === 'delay_carrier' ? 'Carrier' : datum.label === 'delay_late' ? 'Previous late aircraft' : datum.label === 'delay_nas' ? 'National Aviation System' : datum.label === 'delay_security' ? 'Security' : 'Weather'"
              }
            },
            "opacity": {
              "condition": {
                "param": "delay_cause",
                "value": 1
              },
              "value": 0.2
            }
          }
        }
      ]
    },
    {
      "width": 950,
      "height": 60,
      "data": {
        "url": "./data/monthly_ontime.csv"
      },
      "transform": [
        {
          "as": "date",
          "calculate": "datetime(datum.year, datum.month - 1)"
        }
      ],
      "mark": "line",
      "params": [
        {
          "name": "time_brush",
          "select": {
            "type": "interval",
            "encodings": ["x"]
          }
        }
      ],
      "encoding": {
        "x": {
          "field": "date",
          "timeUnit": "yearmonth",
          "axis": {
            "title": "",
            "format": "%Y"
          }
        },
        "y": {
          "field": "flights",
          "type": "quantitative",
          "title": "Flights",
          "axis": {
            "ticks": true,
            "tickCount": 4
          }
        }
      }
    }
  ],
  "config": {
    "font": "-apple-system, BlinkMacSystemFont, Inter"
  }
}

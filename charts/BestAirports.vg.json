{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": ""
  },
  "width": "container",
  "height": "container",
  "data": {
    "url": "./data/top_airports.csv"
  },
  "encoding": {
    "y": {
      "field": "airport",
      "type": "nominal",
      "title": "Airport",
      "sort": null
    },
    "x": {
      "field": "on_time",
      "type": "quantitative",
      "title": "On time arrivals (%)"
    }
  },
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "tooltip": [
          {
            "field": "airport_name",
            "type": "nominal",
            "title": "Airport"
          },
          {
            "field": "on_time",
            "type": "quantitative",
            "title": "On time (%)",
            "format": ".4"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "xOffset": -4,
        "color": "white"
      },
      "encoding": {
        "text": {
          "field": "airport_name",
          "type": "nominal"
        }
      }
    }
  ]
}
